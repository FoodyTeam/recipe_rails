<p id="notice"><%= notice %></p>

<p>
  <b>Nombre:</b>
  <%= @formula.nombre %>
</p>

<p>
  <b>Tiempo:</b>
  <%= @formula.tiempo %>
</p>

<p>
  <b>Tipo:</b>
  <%= @formula.tipo %>
</p>

<p>
  <b>Descripcion:</b>
  <%= @formula.descripcion %>
</p>

<p>
  <b>Porciones:</b>

  <ul>
    <%- @formula.portions.each do |portion| %>
      <li>
        <span><%= portion.ingredient.nombre %></span>
        <span>50gr</span>
      </li>
    <% end %>
  </ul>
</p>


<%= link_to 'Edit', edit_formula_path(@formula) %> |
