<h1>Listing formulas</h1>

<table>
  <tr>
    <th>Nombre</th>
    <th>Tiempo</th>
    <th>Tipo</th>
    <th>Descripcion</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @formulas.each do |formula| %>
  <tr>
    <td><%= formula.nombre %></td>
    <td><%= formula.tiempo %></td>
    <td><%= formula.tipo %></td>
    <td><%= formula.descripcion %></td>
    <td><%= link_to 'Show', formula %></td>
    <td><%= link_to 'Edit', edit_formula_path(formula) %></td>
    <td><%= link_to 'Destroy', formula, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

